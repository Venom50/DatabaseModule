<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.databasemodule">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".TestApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App">
        <activity android:name=".Views.frontEnd.UserEmulatorActivity"></activity>
        <activity android:name=".Views.frontEnd.UserActivity" />
        <activity android:name=".Views.frontEnd.AdminActivity" />
        <activity android:name=".Views.frontEnd.DeleteActivityView" />
        <activity android:name=".Views.frontEnd.SetActivityView" />
        <activity android:name=".Views.frontEnd.GetActivityView" />
        <activity android:name=".Views.frontEnd.ListActivityView" />
        <activity android:name=".Views.frontEnd.RaportAcitivity" />
        <activity android:name=".Views.frontEnd.ChartActivity" />
        <activity android:name=".Views.frontEnd.TableActivity" />
        <activity android:name=".Views.frontEnd.DataMenuActivity" />
        <activity android:name=".Views.DownloadConfigActivity" />
        <activity android:name=".Views.DownloadMeasurementsActivity" />
        <activity android:name=".Views.AddMeasurementActivity" />
        <activity android:name=".Views.AddConfigActivity" />
        <activity android:name=".Views.DownloadUsersActivity" />
        <activity android:name=".Views.AddUserActivity" />
        <activity android:name=".Views.AddDataActivity" />
        <activity android:name=".Views.DownloadDataActivity" />
        <activity android:name=".MainMenu"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Bluetooth.bluetoothfragment.DeviceListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/select_device"
            android:theme="@android:style/Theme.Holo.Dialog" />
        <activity
            android:name=".Views.emulator.ListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="Emulator - List"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />
        <activity
            android:name=".Views.emulator.EmulatorActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name" />
        <activity
            android:name=".Views.emulator.GetActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="Emulator - Get"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />
        <activity
            android:name=".Views.emulator.DeleteActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="Emulator - Delete"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />
        <activity
            android:name=".Views.emulator.SetActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="Emulator - Set"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />
    </application>

</manifest>