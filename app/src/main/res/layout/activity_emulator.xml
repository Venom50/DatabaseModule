<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
    android:background="#3CB870"
  tools:context=".Views.emulator.EmulatorActivity">

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Komunikacja z urządzeniem"
        android:textColor="#FFFFFF"
        android:textSize="45sp"
        android:layout_marginBottom="64dp"
        android:gravity="center"/>

    <Button
      style="@style/buttonStyle"
      android:id="@+id/get_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:onClick="openGetActivity"
      android:text="Pobierz" />

    <Button
      style="@style/buttonStyle"
      android:id="@+id/set_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:onClick="openSetActivity"
      android:text="Ustaw" />

    <Button
      style="@style/buttonStyle"
      android:id="@+id/list_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:onClick="openListActivity"
      android:text="Lista" />

    <Button
      style="@style/buttonStyle"
      android:id="@+id/delete_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:onClick="openDeleteActivity"
      android:text="Usuń" />
  </LinearLayout>


</RelativeLayout>